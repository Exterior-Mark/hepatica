{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "isolatedModules": false,
    "pretty": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./*"]
    },
    "lib": [
      "ESNext",
      "ESNext.asynciterable",
      "ES2020",
      "ES2019",
      "ES2018",
      "ES2017",
      "ES2016",
      "ES2015",
      "ScriptHost",
      "DOM",
      "DOM.Iterable"
    ],
    "typeRoots": ["@types", "node_modules/@types"],
    "types": ["@types/node", "webpack-env", "@nuxt/types"]
  },
  "exclude": ["node_modules", ".nuxt", "dist"],
  "include": ["*.config.ts"]
}
