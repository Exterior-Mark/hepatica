{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "isolatedModules": false,
    "pretty": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./*"]
    },
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "ES2020",
      "ScriptHost",
      "DOM",
      "DOM.Iterable"
    ],
    "typeRoots": ["@types", "node_modules/@types"],
    "types": ["@types/node", "webpack-env", "@nuxt/types"]
  },
  "exclude": ["node_modules", ".nuxt", "dist"],
  "include": ["*.config.ts"]
}
